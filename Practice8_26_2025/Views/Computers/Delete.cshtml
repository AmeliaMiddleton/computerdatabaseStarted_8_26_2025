@model Practice8_26_2025_Copy.Models.Computer

@{
    ViewData["Title"] = "Delete Computer";
}

<h1>Delete Computer</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this computer?</h4>
    <p>This action will mark the computer as inactive. The record will be preserved for audit purposes.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>@Model.Brand @Model.Model</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Brand</dt>
                            <dd class="col-sm-8">@Model.Brand</dd>

                            <dt class="col-sm-4">Model</dt>
                            <dd class="col-sm-8">@Model.Model</dd>

                            <dt class="col-sm-4">Processor</dt>
                            <dd class="col-sm-8">@Model.Processor</dd>

                            <dt class="col-sm-4">RAM</dt>
                            <dd class="col-sm-8">@Model.RamGB GB</dd>

                            <dt class="col-sm-4">Storage</dt>
                            <dd class="col-sm-8">@Model.StorageGB GB @Model.StorageType</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Operating System</dt>
                            <dd class="col-sm-8">@Model.OperatingSystem</dd>

                            <dt class="col-sm-4">Year Manufactured</dt>
                            <dd class="col-sm-8">@(Model.YearManufactured?.ToString() ?? "N/A")</dd>

                            <dt class="col-sm-4">Purchase Price</dt>
                            <dd class="col-sm-8">@(Model.PurchasePrice?.ToString("C") ?? "N/A")</dd>

                            <dt class="col-sm-4">Date Added</dt>
                            <dd class="col-sm-8">@Model.DateAdded.ToString("MM/dd/yyyy")</dd>

                            <dt class="col-sm-4">Status</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Inactive</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="row mt-3">
                        <div class="col-12">
                            <dt>Notes</dt>
                            <dd>@Model.Notes</dd>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Delete Confirmation</h5>
            </div>
            <div class="card-body">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="alert alert-warning">
                        <strong>Note:</strong> This will mark the computer as inactive but preserve the record.
                    </div>
                    <div class="d-grid gap-2">
                        <input type="submit" value="Delete Computer" class="btn btn-danger" />
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 