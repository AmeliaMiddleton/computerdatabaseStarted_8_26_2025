@model Practice8_26_2025_Copy.Models.Computer

@{
    ViewData["Title"] = "Add New Computer";
}

<h1>Add New Computer</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Brand" class="control-label"></label>
                        <input asp-for="Brand" class="form-control" placeholder="e.g., Dell, HP, Apple" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" placeholder="e.g., Latitude 5520, EliteBook 840" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Processor" class="control-label"></label>
                <input asp-for="Processor" class="form-control" placeholder="e.g., Intel Core i7-1185G7, Apple M1" />
                <span asp-validation-for="Processor" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="RamGB" class="control-label">RAM (GB)</label>
                        <input asp-for="RamGB" class="form-control" type="number" min="1" max="128" />
                        <span asp-validation-for="RamGB" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StorageGB" class="control-label">Storage (GB)</label>
                        <input asp-for="StorageGB" class="form-control" type="number" min="1" max="10000" />
                        <span asp-validation-for="StorageGB" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StorageType" class="control-label">Storage Type</label>
                        <select asp-for="StorageType" class="form-control">
                            <option value="">Select Storage Type</option>
                            <option value="SSD">SSD</option>
                            <option value="HDD">HDD</option>
                            <option value="NVMe">NVMe</option>
                            <option value="Hybrid">Hybrid</option>
                        </select>
                        <span asp-validation-for="StorageType" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="OperatingSystem" class="control-label">Operating System</label>
                        <select asp-for="OperatingSystem" class="form-control">
                            <option value="">Select OS</option>
                            <option value="Windows 11 Pro">Windows 11 Pro</option>
                            <option value="Windows 11 Home">Windows 11 Home</option>
                            <option value="Windows 10 Pro">Windows 10 Pro</option>
                            <option value="Windows 10 Home">Windows 10 Home</option>
                            <option value="macOS">macOS</option>
                            <option value="Ubuntu">Ubuntu</option>
                            <option value="Linux">Linux</option>
                        </select>
                        <span asp-validation-for="OperatingSystem" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="YearManufactured" class="control-label">Year Manufactured</label>
                        <input asp-for="YearManufactured" class="form-control" type="number" min="1900" max="2030" />
                        <span asp-validation-for="YearManufactured" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PurchasePrice" class="control-label">Purchase Price</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Notes" class="control-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional information about the computer..."></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Computer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Tips for Adding Computers</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-info-circle text-info"></i> Include the full model name for better identification</li>
                    <li><i class="fas fa-info-circle text-info"></i> Specify exact processor model for accurate specs</li>
                    <li><i class="fas fa-info-circle text-info"></i> Use consistent storage type abbreviations</li>
                    <li><i class="fas fa-info-circle text-info"></i> Add notes for special configurations or issues</li>
                </ul>
            </div>
        </div>
    </div>
</div>

 